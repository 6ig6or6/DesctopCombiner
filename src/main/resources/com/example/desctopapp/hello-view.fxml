<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextArea?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.desctopapp.DescController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Divide a file" onAction="#onDivideFileButtonClick"/>
    <Button alignment="CENTER_RIGHT" text="Combine a file" onAction="#onCombineFileButtonClick"/>

    <TextArea fx:id="textArea" editable="false"/>

</VBox>

